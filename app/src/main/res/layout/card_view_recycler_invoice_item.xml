<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:layout_weight="1"
    >
    <!--android:layout_margin="8dp"-->
    <LinearLayout
        android:id="@+id/lin_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:baselineAligned="false"
        android:orientation="vertical">
        <!--android:paddingTop="@dimen/list_item_article_space"-->
        <!--android:paddingBottom="@dimen/list_item_article_space"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="?android:attr/activatedBackgroundIndicator"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/list_item_article_space"
        android:paddingTop="@dimen/list_item_article_space">

        <!--<ImageView-->
            <!--android:id="@+id/thumbnail"-->
            <!--android:layout_width="@dimen/list_item_article_thumbnail"-->
            <!--android:layout_marginLeft="16dp"-->
            <!--android:layout_height="@dimen/list_item_article_thumbnail"-->
            <!--android:background="@drawable/ic_more_vert_black_18px"-->
            <!--android:scaleType="centerCrop" />-->

        <LinearLayout
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_artile_vertical_margin"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="@dimen/list_item_artile_vertical_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:id="@+id/product"
                android:text="Product" >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:id="@+id/idrate"
                android:text="Rate" >
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:id="@+id/idhsncode"
                    android:text="HSNCode" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:id="@+id/quantity"
                    android:text="Qty" >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"

                    android:layout_weight="1"
                    android:id="@+id/gstrate"
                    android:text="GSTRate" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"

                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"

                    android:layout_weight="1"
                    android:id="@+id/idgstamt"
                    android:text="Gst Amt" >
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:textStyle="bold"

                android:layout_weight="1"
                android:id="@+id/idtaxableamt"
                android:text="Taxable Amt" >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"

                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"

                android:layout_weight="1"
                android:id="@+id/idtotalamt"
                android:text="Total Amt" >
            </TextView>
        </LinearLayout>
        <ImageButton
            android:id="@+id/img_more"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="17dp"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:tint="@color/colorSecondaryText"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />
    </LinearLayout>



    </LinearLayout>






</android.support.v7.widget.CardView>

</LinearLayout>